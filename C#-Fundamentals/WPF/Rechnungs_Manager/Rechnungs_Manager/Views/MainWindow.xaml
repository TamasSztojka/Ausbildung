<Window x:Class="Rechnungs_Manager.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Rechnungs_Manager.ViewModels"
        Title="Invoice"
        Height="520" Width="760"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:InvoiceViewModel/>
    </Window.DataContext>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Input -->
        <StackPanel Grid.Column="0">
            <TextBlock Text="Invoice Data" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

            <TextBlock Text="Company Name"/>
            <TextBox Text="{Binding CompanyName, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Text="Customer Name" Margin="0,10,0,0"/>
            <TextBox Text="{Binding CustomerName, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Text="Customer Number (KU-1234)" Margin="0,10,0,0"/>
            <TextBox Text="{Binding CustomerNumber, UpdateSourceTrigger=PropertyChanged}"/>

            <Separator Margin="0,15,0,15"/>

            <TextBlock Text="Product Name"/>
            <TextBox Text="{Binding ProductName, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Text="Quantity" Margin="0,10,0,0"/>
            <TextBox Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Text="Price Per Unit" Margin="0,10,0,0"/>
            <TextBox Text="{Binding PricePerUnit, UpdateSourceTrigger=PropertyChanged}"/>

            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                <Button Content="Add Item" Width="120" Height="36"
                        Command="{Binding AddItemCommand}"/>
                <Button Content="Save (.txt/.doc)" Width="140" Height="36" Margin="10,0,0,0"
                        Command="{Binding SaveCommand}"/>
            </StackPanel>
        </StackPanel>

        <!-- Output -->
        <Border Grid.Column="2" Padding="15" BorderBrush="Gray" BorderThickness="1" CornerRadius="6">
            <StackPanel>
                <TextBlock Text="Totals" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                <TextBlock Text="{Binding NetTotal, StringFormat=Net:\ {0:C}}" FontSize="14"/>
                <TextBlock Text="{Binding TaxAmount, StringFormat=Tax\ (20%):\ {0:C}}" FontSize="14" Margin="0,6,0,0"/>
                <TextBlock Text="{Binding GrossTotal, StringFormat=Gross:\ {0:C}}" FontSize="16" FontWeight="Bold" Margin="0,10,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
