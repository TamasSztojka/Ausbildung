<Window x:Class="ONE_PIECE_API_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="One Piece Crews Browser"
        Height="600"
        Width="1050">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0"
                BorderBrush="Gray"
                BorderThickness="1"
                CornerRadius="6"
                Padding="10"
                Margin="0,0,10,0">

            <DockPanel>
                <TextBlock Text="Crews"
                           FontSize="16"
                           FontWeight="Bold"
                           DockPanel.Dock="Top"
                           Margin="0,0,0,8"/>

                <ListBox x:Name="CrewList"
                         DisplayMemberPath="CrewName"
                         SelectionChanged="CrewList_SelectionChanged"/>
            </DockPanel>
        </Border>

        <Border Grid.Column="1"
                BorderBrush="Gray"
                BorderThickness="1"
                CornerRadius="6"
                Padding="10"
                Margin="0,0,10,0">

            <DockPanel>
                <TextBlock Text="Crew Members"
                           FontSize="16"
                           FontWeight="Bold"
                           DockPanel.Dock="Top"
                           Margin="0,0,0,8"/>

                <ListBox x:Name="MemberList"
                         DisplayMemberPath="CharacterName"/>
            </DockPanel>
        </Border>

        <Border Grid.Column="2"
                BorderBrush="Gray"
                BorderThickness="1"
                CornerRadius="6"
                Padding="12">

            <StackPanel>

                <TextBlock Text="Crew Information"
                           FontSize="16"
                           FontWeight="Bold"
                           Margin="0,0,0,10"/>

                <TextBlock Text="Crew Name:" FontWeight="SemiBold"/>
                <TextBlock x:Name="CrewNameText" Margin="0,0,0,8"/>

                <TextBlock Text="Crew Status:" FontWeight="SemiBold"/>
                <TextBlock x:Name="CrewStatusText" Margin="0,0,0,8"/>

                <TextBlock Text="Total Crew Bounty:" FontWeight="SemiBold"/>
                <TextBlock x:Name="CrewTotalPrimeText" Margin="0,0,0,8"/>

                <TextBlock Text="Yonko Crew:" FontWeight="SemiBold"/>
                <TextBlock x:Name="CrewYonkoText" Margin="0,0,0,12"/>

                <Separator Margin="0,10,0,10"/>

                <TextBlock Text="Selected Member"
                           FontSize="16"
                           FontWeight="Bold"
                           Margin="0,0,0,10"/>

                <Button Content="Show Selected Member Bounty and Devil Fruit"
                        Padding="12,6"
                        HorizontalAlignment="Left"
                        Click="ShowMemberDetails_Click"/>

                <TextBlock x:Name="MemberNameText"
                           FontSize="20"
                           FontWeight="Bold"
                           Margin="0,12,0,6"/>

                <TextBlock x:Name="MemberBountyText"
                           FontSize="14"
                           Margin="0,0,0,6"/>

                <TextBlock x:Name="MemberFruitText"
                           FontSize="14"
                           TextWrapping="Wrap"/>

                <TextBlock x:Name="ErrorText"
                           Foreground="DarkRed"
                           Margin="0,16,0,0"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

    </Grid>
</Window>
