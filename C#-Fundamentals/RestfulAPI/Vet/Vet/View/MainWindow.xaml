<Window x:Class="Vet.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Vet App" Height="600" Width="950">
    <DockPanel Margin="10">

        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10">
            <Button x:Name="BtnReload" Content="Reload Data" Width="120" Click="BtnReload_Click"/>
            <TextBlock x:Name="TxtStatus" Margin="10,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <GroupBox Header="Pets" Grid.Column="0">
                <ListBox x:Name="ListPets"
                         DisplayMemberPath="Display"
                         SelectionChanged="ListPets_SelectionChanged"/>
            </GroupBox>

            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <GroupBox Header="Treatments" Grid.Row="0">
                    <DataGrid x:Name="GridTreatments" AutoGenerateColumns="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat=yyyy-MM-dd}" Width="120"/>
                            <DataGridTextColumn Header="Diagnosis" Binding="{Binding Diagnosis}" Width="*"/>
                            <DataGridTextColumn Header="Vet" Binding="{Binding VetName}" Width="160"/>
                            <DataGridTextColumn Header="Costs" Binding="{Binding Costs, StringFormat=0.00}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>

                <GroupBox Header="Statistics" Grid.Row="2">
                    <TextBox x:Name="TxtStats" IsReadOnly="True" TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"/>
                </GroupBox>
            </Grid>
        </Grid>
    </DockPanel>
</Window>